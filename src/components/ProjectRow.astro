---
export interface Props {
    title: string;
    img_url: string;
    alternate?: boolean;
}

const { title, img_url, alternate = false } = Astro.props;
---

<div class="w-full grid grid-cols-12">
    {!alternate ? 
        <div class="col-start-1 col-end-8 z-10 row-start-1 row-end-[-1] flex flex-col justify-center">
            <a class="bg-cyan-900 hover:bg-cyan-700 rounded flex flex-col p-3 justify-center">
                <div class="text-2xl">{title}</div>
                <div>{alternate ? "true" : "false"}</div>
            </a>
        </div>
        <div class="bg-gray-900 col-start-6 col-end-[-1] z-0 row-start-1 row-end-[-1]">
            <img src="./avatar.png" class="h-40 mx-auto">
        </div>
    : 
        <div class="col-start-6 col-end-[-1] z-10 row-start-1 row-end-[-1] flex flex-col justify-center">
            <a class="bg-orange-900 hover:bg-orange-700 rounded flex flex-col p-3 justify-center">
                <div class="text-2xl">{title}</div>
                <div>{alternate ? "true" : "false"}</div>
            </a>
        </div>
        <div class="bg-gray-900 col-start-1 col-end-8 z-0 row-start-1 row-end-[-1]">
            <img src="./avatar.png" class="h-40 mx-auto">
        </div>
    }
</div>