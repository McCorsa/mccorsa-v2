---
import ProjectCard from "../components/ProjectCard.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home">
	<section class="container mx-auto md:px-32 flex flex-col h-screen justify-center gap-2">
		<p class="text-xl lg:text-lg text-cyan-600">G'day! My name is</p>
		<h1 class="text-5xl lg:text-7xl font-bold">Corey McCormick</h1>
		<h3 class="text-xl lg:text-2xl font-light md:w-1/2 text-cyan-300">
			I am a web application designer and developer. I am also a UX researcher.
		</h3>
		<div class="mt-6"><a href="/" class="border border-cyan-300 text-cyan-300 p-3">My Portfolio</a></div>
	</section>
	<section class="container mx-auto text-cyan-600 py-3">
		<h2 class="text-4xl font-semibold">My Recent Projects</h2>
	</section>
</Layout>


